<h1 class="text-2xl font-bold mb-4">Đăng nhập</h1>
<% if (error) { %>
    <p class="text-red-500 mb-4"><%- error %></p> <!-- A03: XSS -->
    <% } %>
        <form method="POST" action="/users/login" class="space-y-4">
            <div>
                <label class="block text-gray-700">Email:</label>
                <input type="email" name="email" required class="border rounded p-2 w-full">
            </div>
            <div>
                <label class="block text-gray-700">Mật khẩu:</label>
                <input type="password" name="password" required class="border rounded p-2 w-full">
            </div>
            <div class="g-recaptcha" data-sitekey="6LeSTjMrAAAAALEWLhBDVD4d8WbkjJ36CItkZevZ"></div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Đăng nhập</button>
        </form>